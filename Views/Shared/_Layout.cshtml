@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - My Store</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Dashboard", "Home")">My Store</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (HttpContextAccessor.HttpContext.Session.GetString("Token") != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Dashboard", "Home")">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Customer")">Customer List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Product")">Product List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("index", "Order")">My Orders</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Create", "Order")">Order</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Logout", "Customer")">Logout</a>
                        </li>
                    }
                    else if (HttpContextAccessor.HttpContext.Session.GetString("AdminToken") != null)
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Dashboard", "Admin")">Admin Dashboard</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Customer")">Customer List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("AdminProducts", "Admin")">Product List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ApproveOrderList", "Admin")">Approve Order</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Logs", "Admin")">Log Panel</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Logout", "Admin")">Logout</a>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Home")">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Customer")">Customer List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index", "Product")">Product List</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Login", "Admin")">  Admin Login</a>
                        </li>
                    }
                </ul>
            </div>
        </div>
    </nav>

    <div class="container mt-4">
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success">
                @TempData["Success"]
            </div>
        }
        @RenderBody()
    </div>

    <footer class="text-center mt-4">
        <p>&copy; 2024 - My Store</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
