@model YazlabBirSonProje.Models.Product

@{
    ViewData["Title"] = "Ürün Düzenle";
}

<h2>Ürün Düzenle</h2>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">
        @TempData["Error"]
    </div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">
        @TempData["Success"]
    </div>
}

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="ProductID" />
    <div class="form-group">
        <label asp-for="ProductName"></label>
        <input type="text" asp-for="ProductName" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Stock"></label>
        <input type="number" asp-for="Stock" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Price"></label>
        <input type="number" asp-for="Price" step="0.01" class="form-control" />
    </div>
    <button type="submit" class="btn btn-success mt-2">Güncelle</button>
    <a asp-action="AdminProducts" class="btn btn-secondary mt-2">İptal</a>
</form>
